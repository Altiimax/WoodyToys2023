###### Configuration de DKIM

$enable_dkim_verification = 1;
$enable_dkim_signing = 1;

dkim_key('l2-2.ephec-ti.be', 'mail', '/var/lib/amavis/dkim/dkimkey.pem');
@dkim_signature_options_bysender_maps = (
  {
    '.' => {
      ttl => 30*24*3600,
      c => 'relaxed/simple'
    }
  }
);
